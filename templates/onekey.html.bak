{% extends 'base.html' %}
{% block title %}一键部署{% endblock %}

{% block content_title %}部署{% endblock %}

{% block content %}
<div class="margin">

	<form enctype="multipart/form-data" action="/onekey/" method="post" >
	{% csrf_token %}
		任务描述:&nbsp;
		<input type="text" id="task" name="task" />
		
		<br />
		选择组别:&nbsp;
		<select name="group">
			{% for group in groups %}
		  		<option value="{{ group }}">{{ group }}</option> 
			{% endfor %}
		</select>
	
	<br />
	上传文件:&nbsp;
	<input type="file" id="file" name="file" />
	
	&nbsp;&nbsp;&nbsp;&nbsp;
	<input type="reset" value="重置" />
	&nbsp;&nbsp;&nbsp;&nbsp;
	<input type="submit" onclick="return submitit()" value="提交"/>
	
	</form>

</div>
